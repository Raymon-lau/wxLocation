/* mapLocation.wxss */

page{
  width: 100%;
  background-color: #eeeeee;
  padding-top: 96rpx;
}

.mapSearch{
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  position: fixed;
  color: #666666;
  top: 0;
  left: 0;
  width: 100%;
  background: #eeeeee;
  z-index:9999;
}

.inputSearch{
  background: white url(http://img.tianxiahuo.cn/public/NetFile/20170711/f7f5ff992ac9a9e81fac03541ae6b6c.png) no-repeat 30% center;
  background-size: 30rpx;
  width: 91%;
  height: 60rpx;
  margin-left: 30rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
}

.inputSearch text{
  padding-left: 40%;
}


.mapView map{
  width: 100%;
  height: 600rpx;
}

.addressCell{
  background-color: white;
  padding: 10rpx 20rpx 10rpx 20rpx;
  margin-bottom: 5rpx;
}

.address text:first-child{
  font-size: 30rpx;
  color:#e75858 
}

.address text:last-child{
  font-size: 30rpx;
  color: #000000;
}

.detail text{
  font-size: 27rpx;
  color: #666666;
}